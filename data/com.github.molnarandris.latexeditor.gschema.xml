<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="latexeditor">
	<schema id="com.github.molnarandris.latexeditor" path="/com/github/molnarandris/latexeditor/">
	</schema>

	<schema id="com.github.molnarandris.latexeditor.window-state" path="/com/github/molnarandris/latexeditor/window-state/">
    <key name="width" type="i">
      <default>840</default>
      <summary>Window width</summary>
      <description>Width of the window</description>
    </key>
    <key name="height" type="i">
      <default>640</default>
      <summary>Window height</summary>
      <description>Height of the window</description>
    </key>
    <key name="maximized" type="b">
      <default>false</default>
      <summary>Maximized</summary>
      <description>Whether the window is maximized</description>
    </key>
    <key name="fullscreen" type="b">
      <default>false</default>
      <summary>Fullscreen</summary>
      <description>Whether the window is fullscreen</description>
    </key>
    <key name="paned-position" type="d">
      <default>0.5</default>
      <summary>Pane position</summary>
      <description>The position of the division</description>
    </key>
	</schema>
</schemalist>
